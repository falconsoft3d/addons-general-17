<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_tax_note_account_move_form_view" model="ir.ui.view">
            <field name="name">res.tax.note.account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='ref']" position="after">
                    <field name="tax_note" readonly="state != 'draft'"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
