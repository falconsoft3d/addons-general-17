<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista de usuario con campo plantilla -->
    <record id="view_users_tree_template" model="ir.ui.view">
        <field name="name">res.users.tree.template</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="is_template_user"
                       widget="boolean_toggle"
                       string="Plantilla" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
