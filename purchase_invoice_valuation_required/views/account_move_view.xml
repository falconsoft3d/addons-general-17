<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="valuation_ref_inherit_account_view_move_form" model="ir.ui.view">
        <field name="name">valuation_ref.view_move_form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="valuation_file" invisible="move_type != 'in_invoice'"/>
                <field name="invoice_file" invisible="move_type != 'in_invoice'"/>
            </xpath>

        </field>
    </record>

</odoo>
