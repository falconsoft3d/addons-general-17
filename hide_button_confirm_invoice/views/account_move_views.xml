<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="account_move_form_button_inherit" model="ir.ui.view">
    <field name="name">account.move.form.button.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
       <xpath expr="//form[1]/header[1]/button[@name='action_post']" position="attributes">
          <attribute name="studio_approval">False</attribute>
        </xpath>
      <xpath expr="//form[1]/header[1]/button[@name='action_post'][2]" position="attributes">
        <attribute name="groups">hide_button_confirm_invoice.module_group_hide_button_invoice</attribute>
        <attribute name="studio_approval">False</attribute>
      </xpath>
    </field>
  </record>
</odoo>