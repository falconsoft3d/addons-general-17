<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_document_payment_account_move_form_view" model="ir.ui.view">
            <field name="name">res.document.payment.account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="customer_res_payment_document_id"  readonly="state != 'draft'"/>
                </xpath>
            </field>
        </record>


        <record id="res_document_payment_account_move_tree_view" model="ir.ui.view">
            <field name="name">res.document.payment.account.tree.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="customer_res_payment_document_id" optional="show"/>
                </xpath>
            </field>
        </record>


        <record id="res_document_payment_account_move_tree_pro_view" model="ir.ui.view">
            <field name="name">res.document.payment.account.tree.pro.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="customer_res_payment_document_id" optional="show"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
