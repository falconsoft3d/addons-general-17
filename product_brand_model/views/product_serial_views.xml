<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_serial_form_model" model="ir.ui.view">
        <field name="name">product.serial.form.model</field>
        <field name="model">product.serial</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="model_id"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_product_serial_tree_model" model="ir.ui.view">
        <field name="name">product.serial.tree.model</field>
        <field name="model">product.serial</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="model_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_serial">
        <field name="name">Serial</field>
        <field name="res_model">product.serial</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>