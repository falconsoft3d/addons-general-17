<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="inh_res_account_move_2_form_view">
        <field name="name">inh.res.account.move.2.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
              <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/field[@name='partner_id']" position="after">
                <field widget="file" filename="file_name" name="file_data"/>
                <field widget="file" invisible="True" name="file_name"/>
                <field invisible="state not in ['draft']"
                       name="converted"
                       readonly="1" />
              </xpath>


            <xpath expr="//button[@name='action_post']" position="after">
                <button string="Read" name="read_invoice" type="object"
                         invisible="converted or state not in ['draft']"/>
            </xpath>

        </field>
    </record>
</odoo>