        <!-- Hereda la vista formulario de purchase.order -->
        <record id="view_purchase_order_form_editable_name" model="ir.ui.view">
            <field name="name">purchase.order.form.editable.name</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Localiza el campo name y modifica su atributo readonly -->
                <field name="name" position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
