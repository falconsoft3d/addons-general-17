<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="approval_provider_user_access">
        <field name="name">Provider Homologation</field>
        <field name="description">Establish some access rules for the supplier approval process.</field>
        <field name="sequence">21</field>
    </record>

    <record id="group_approval_user_readonly" model="res.groups">
        <field name="name">User approval</field>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="category_id" ref="provider_homologation.approval_provider_user_access"/>
        <field name="comment">The user will have access readonly in Purchase.</field>
    </record>

    <record id="group_approval_user_admin" model="res.groups">
        <field name="name">Admin Approval</field>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_user'))]"/>
        <field name="comment">The user will have all access in Purchase.</field>
        <field name="category_id" ref="provider_homologation.approval_provider_user_access"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

</odoo>