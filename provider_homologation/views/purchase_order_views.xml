<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- views -->
    <record id="purchase_order_inherit_form_homologation" model="ir.ui.view">
        <field name="name">purchase_order_homologation</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Homologation">
                    <group>
                        <field name="has_homologation"/>
                        <field name="homologation_required"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>


</odoo>
