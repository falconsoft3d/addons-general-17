<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_payday_payment_account_move_form_view" model="ir.ui.view">
            <field name="name">res.payday.payment.account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form[1]/sheet[1]/group[1]/group[2]/field[@name='date']" position="before">
                    <field name="payday"
                           readonly="state != 'draft'"/>
                </xpath>
            </field>
        </record>


        <record id="res_payday_payment_account_move_tree_view" model="ir.ui.view">
            <field name="name">res.payday.payment.account.tree.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="payment_mode_show.res_show_payment_account_move_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                    <field name="payday" optional="show"/>
                </xpath>
            </field>
        </record>


        <record id="res_payday_payment_account_move_tree_pro_view" model="ir.ui.view">
            <field name="name">res.payday.payment.account.tree.pro.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="payment_mode_show.res_show_payment_account_move_tree_pro_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                    <field name="payday"  optional="show"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
