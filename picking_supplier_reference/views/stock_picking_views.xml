<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_view_ref_picking_form" model="ir.ui.view">
            <field name="name">stock.view.ref.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="before">
                    <field name="supplier_reference"
                           required="partner_id and (picking_type_code == 'incoming' or picking_type_code == 'outgoing')"
                           invisible="not partner_id"
                    />
                </xpath>
            </field>
        </record>

         <record id="stock_view_ref_picking_tree" model="ir.ui.view">
            <field name="name">stock.view.ref.picking.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="before">
                    <field name="supplier_reference"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
