<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="crm_stage_pro_form" model="ir.ui.view">
            <field name="name">crm.stage.pro.form</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fold']" position="after">
                    <field name="crm_pro_info_id"/>
                    <field name="default_stage"/>
                </xpath>
            </field>
        </record>


       <record id="crm_stage_pro_tree" model="ir.ui.view">
            <field name="name">crm.stage.pro.tree</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="crm_pro_info_id"/>
                    <field name="default_stage"/>
                </xpath>
            </field>
        </record>
</odoo>