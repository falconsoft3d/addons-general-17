<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <data>
    <record id="view_form_crm_pro_info" model="ir.ui.view">
         <field name="name">view.form.crm.pro.info</field>
         <field name="model">crm.pro.info</field>
         <field name="arch" type="xml">
            <form string="Crm Pro Info">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                          <field name="date"/>
                          <field name="send_email"/>
                          <field name="numer_days"/>
                        </group>
                        <group>
                          <field name="email_title"/>
                          <field name="email_body"
                                widget="html"
                          />
                       </group>
                  </group>
               </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_tree_crm_pro_info" model="ir.ui.view">
         <field name="name">view.tree.crm.pro.info</field>
         <field name="model">crm.pro.info</field>
         <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="send_email"/>
                <field name="numer_days"/>
                <field name="date"/>
                <field name="email_title" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="action_crm_pro_info" model="ir.actions.act_window">
        <field name="name">Crm Pro Info</field>
        <field name="res_model">crm.pro.info</field>
        <field name="view_id" ref="view_tree_crm_pro_info"/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Create a new register</p>
       </field>
    </record>

     </data>
</odoo>
