<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="meeting_attendance_view_tree" model="ir.ui.view">
            <field name="name">meeting.attendance.view.tree</field>
            <field name="model">meeting.attendance</field>
            <field name="arch" type="xml">
                <tree string="Asistencia">
                    <field name="name"/>
                    <field name="class_ticket_id"/>
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="meeting_attendance_view_form" model="ir.ui.view">
            <field name="name">meeting.attendance.view.form</field>
            <field name="model">meeting.attendance</field>
            <field name="arch" type="xml">
                <form string="Clase">
                    <sheet>
                        <label for="name"/>
                        <div class="oe_title">
                           <h1>
                               <field name="name"/>
                           </h1>
                        </div>
                        <group>
                            <group>
                                <field name="class_ticket_id"/>
                            </group>
                                <field name="date"/>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="meeting_attendance_action" model="ir.actions.act_window">
            <field name="name">Asistencia</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">meeting.attendance</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="meeting_attendance_act" name="Asistencias"
                  parent="menu_data"
                  action="meeting_attendance_action"/>
    </data>
</odoo>