<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="class_ticket_view_tree" model="ir.ui.view">
            <field name="name">class.ticket.view.tree</field>
            <field name="model">class.ticket</field>
            <field name="arch" type="xml">
                <tree string="Notas">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="attendance_plan" sum="sum"/>
                    <field name="meeting_attendance_count"  sum="sum"/>
                </tree>
            </field>
        </record>

        <record id="class_ticket_view_form" model="ir.ui.view">
            <field name="name">class.ticket.view.form</field>
            <field name="model">class.ticket</field>
            <field name="arch" type="xml">
                <form string="Clase">
                    <sheet>

                        <div class="oe_button_box" name="button_box">
                            <button name="view_meeting_attendance"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil">
                                <div class="o_field_widget o_stat_info">
                                    <field name="meeting_attendance_count"/>
                                    <span class="o_stat_text">Asistencias</span>
                                </div>
                            </button>
                        </div>

                        <label for="name"/>
                        <div class="oe_title">
                           <h1>
                               <field name="name"/>
                           </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="attendance_plan"/>
                            </group>
                                <field name="date"/>
                            <group>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="class_ticket_action" model="ir.actions.act_window">
            <field name="name">Clases</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">class.ticket</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="class_ticket_act" name="Clases / Reuniones"
                  parent="menu_data"
                  action="class_ticket_action"/>
    </data>
</odoo>