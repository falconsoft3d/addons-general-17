<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="act_ticket_notes_report" model="ir.actions.report">
            <field name="name">Reporte de Notas</field>
            <field name="model">ticket.notes</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ticket_pro.report_ticket_notes</field>
            <field name="report_file">ticket_pro.report_ticket_notes</field>
            <field name="print_report_name">'Reporte de Notas_%s' % (object.name)</field>
            <field name="binding_view_types">form</field>
            <field name="binding_model_id" ref="model_ticket_notes"/>
        </record>


        <template id="report_ticket_notes">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <t t-foreach="docs" t-as="o">
                        <div class="page">
                            <h3 class="text-center">
                                <span t-esc="o.title"/>
                            </h3>
                            <br/>
                            <div class="row mt32 mb32" id="informations">
                                <div class="col-auto mw-100 mb-2">
                                    <strong>Fecha:</strong>
                                    <p class="m-0" t-esc="o.date_note"/>
                                </div>
                                <div class="col-auto mw-100 mb-2" name="expiration_date">
                                    <strong>Secuencia:</strong>
                                    <p class="m-0" t-esc="o.name"/>
                                </div>
                            </div>
                            <div class="row w-100">

                                <!-- quiero escapar los caracteres html en o.note -->
                                <span t-raw="o.note"

                                />
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>


    </data>
</odoo>