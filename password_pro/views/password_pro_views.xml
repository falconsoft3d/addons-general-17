<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
    <data>
    <record id="view_form_password_pro" model="ir.ui.view">
         <field name="name">view.form.password_pro</field>
         <field name="model">password.pro</field>
         <field name="arch" type="xml">
            <form string="Password Pro">
              <header>
              </header>
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                          <field name="password" password="True"/>
                          <field name="model"/>
                          <field name="url" placeholder="http://www.example.com"/>
                       </group>
                  </group>
               </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_password_pro" model="ir.ui.view">
         <field name="name">view.tree.password.pro</field>
         <field name="model">password.pro</field>
         <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="model"/>
                <field name="url" />
            </tree>
        </field>
    </record>

    <record id="action_password_pro" model="ir.actions.act_window">
        <field name="name">Password Pro</field>
        <field name="res_model">password.pro</field>
        <field name="view_id" ref="view_tree_password_pro"/>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Create a new register</p>
       </field>
    </record>

    <menuitem id="menu_password_pro"
        name="Password Pro"
        sequence="40"
        groups="password_pro.password_pro_manager_group"
        web_icon="password_pro,static/description/icon.png"
        >

        <menuitem id="menu_password_pro_son"
            name="Passwords"
            sequence="10"
            groups="password_pro.password_pro_manager_group"
            action="action_password_pro"/>

    </menuitem>

     </data>
</odoo>