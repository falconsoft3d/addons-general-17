<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_inherit_check_consume" model="ir.ui.view">
        <field name="name">product.template.form.check.consume</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="check_consume"/>
            </xpath>
        </field>
    </record>


    <record id="view_product_form_inherit_check_consume" model="ir.ui.view">
        <field name="name">product.product.form.check.consume</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="check_consume"/>
            </xpath>
        </field>
    </record>
</odoo>
