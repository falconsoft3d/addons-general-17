<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cancel_folio_view_move_form" model="ir.ui.view">
            <field name="name"></field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="button_cancel_folio" type="object" string="Anular folio" invisible="state not in ['cancel'] or is_cancelled_folio == True"/>
                    <field name="is_cancelled_folio" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>