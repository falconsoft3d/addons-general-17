<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sequence_cancel_view_form" model="ir.ui.view">
            <field name="name">sequence.cancel.view.form</field>
            <field name="model">sequence.cancel</field>
            <field name="arch" type="xml">
                <form create="0" delete="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="journal_id" options="{'no_create': True, 'no_edit': True}"/>
                                <field name="move_type" invisible="1"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="sequence_cancel" string="Folios anulados">
                                <field name="sequence_cancel_line_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sequence_cancel_view_tree" model="ir.ui.view">
            <field name="name">sequence.cancel.view.tree</field>
            <field name="model">sequence.cancel</field>
            <field name="arch" type="xml">
                <tree create="0" delete="0">
                    <field name="journal_id"/>
                    <field name="move_type"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        
        <record id="seq_cancel_action" model="ir.actions.act_window">
            <field name="name">Folios Cancelados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sequence.cancel</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="seq_cancel_manu" name="Folios Cancelados" parent="account.menu_finance_configuration" action="seq_cancel_action"/>
    </data>
</odoo>