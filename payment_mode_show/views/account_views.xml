<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_show_payment_account_move_form_view" model="ir.ui.view">
            <field name="name">res.show.payment.account.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date_due']" position="replace">
                    <field name="invoice_date_due" string="Fecha de vencimiento"
                           readonly="state != 'draft'"/>
                </xpath>

            </field>
        </record>



        <record id="res_show_payment_account_move_tree_view" model="ir.ui.view">
            <field name="name">res.show.payment.account.tree.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="invoice_payment_term_id" string="Término de Pago" optional="show"/>
                </xpath>
            </field>
        </record>


        <record id="res_show_payment_account_move_tree_pro_view" model="ir.ui.view">
            <field name="name">res.show.payment.account.tree.pro.move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="invoice_payment_term_id" string="Término de Pago" optional="show"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
